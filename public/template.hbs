<ul class="cluster-items">
    {{#each this}}
    <li>
        <div class="cluster-item">
            <img src="/image/{{metadata.name}}"/>
            <div class="cluster-item-header">
                <div class="cluster-item-app">{{metadata.labels.app}}</div>
                <div class="cluster-item-version">{{metadata.labels.version}}</div>
            </div>
            <dl>
                <dt>Name</dt>
                <dd>{{metadata.name}}</dd>
                <dt>Status</dt>
                <dd>{{status.phase}}</dd>
                <dt>Image</dt>
                <dd>{{spec.containers.[0].image}}</dd>
                <dt>Labels</dt>
                <dd>
                    <ul class="cluster-item-labels">
                        {{#each metadata.labels as |value key|}}
                        <li class="cluster-item-label">
                            <em>{{key}}:</em> {{value}}
                        </li>
                        {{/each}}
                    </ul>
                </dd>
            </dl>
        </div>
    </li>
    {{/each}}
</ul>
